@{
    Layout = "_Layout";
}

<h2>Daftar Dosen</h2> <br>
<a asp-action="Create" class="btn btn-success btn-xs">Tambah Data</a>
<br><br>
<div class="row">
@if(ViewData["pesan"]!=null){
    @Html.Raw(ViewData["pesan"])
}

</div>

<div class="row">
    <form asp-action="SearchAll" class="form-inline">
        <div class="form-group">                
            <label style="padding:5px">Masukan Keyword :</label>
            <div class="radio">
                <label><input type="radio" name="optradio" value="Nik" checked>By NIK</label>
                </div>
                <div class="radio">
                <label><input type="radio" name="optradio" value="Nama">By Nama</label>
            </div>
            <input type="text" name="keyword" class="form-control" placeholder="Masukan Keyword">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <br><br><br>
        
    <table class="table table-striped">
        <tr>
            <th>Nik</th>
            <th>Nama</th>
            <th>Alamat</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var data in Model){
            <tr>
                <td>@data.Nik</td>
                <td>@data.Nama</td>
                <td>@data.Alamat</td>
                <td>@data.Email</td>
                <td><a asp-action="Details" asp-route-id="@data.Nik">Details</a></td>
                <td><a asp-action="Delete" asp-route-id="@data.Nik">Delete</a></td>
            </tr>
        }
    </table>
</div>
